<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorMainBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_materi"
        android:layout_marginBottom="30dp"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Materi"
        android:textColor="@color/colorTextBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_materi_kelas_5_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryButton"
        android:padding="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="40dp"
        android:text="Kelas 5"
        android:textColor="@color/colorEditTextBackground"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_materi_kelas_6_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryButton"
        android:padding="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Kelas 6"
        android:textColor="@color/colorEditTextBackground"

        />



</LinearLayout>